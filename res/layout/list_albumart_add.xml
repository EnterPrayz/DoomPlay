<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:background="@color/background">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_gravity="center_vertical"
            android:id="@+id/linearToPlaylist"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:gravity="center_vertical" android:background="#000000"
            android:layout_marginBottom="3dp">
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="7dp" android:src="@drawable/icon_addtoplaylist"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/to_playlist"
                android:paddingLeft="5dp"
                android:textSize="22sp"
                android:textColor="@color/almost_white"/>
    </LinearLayout>
    <ListView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/listAlbumArtist" android:clickable="false" android:divider="@null"
            android:layout_weight="1"/>
</LinearLayout>