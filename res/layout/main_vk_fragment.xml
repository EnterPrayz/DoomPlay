<?xml version="1.0" encoding="utf-8"?>

<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView">

    <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:layout_gravity="center_vertical"
                android:id="@+id/linearVkAll"
                android:paddingTop="11dp"
                android:paddingBottom="11dp"
                android:gravity="center_vertical" android:background="@drawable/abc_item_background_holo_dark">
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="7dp" android:src="@drawable/icon_vk_all"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:textSize="20sp"
                    android:text="@string/My_music"
                    android:textColor="@color/almost_white"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:layout_gravity="center_vertical"
                android:id="@+id/linearVkTop"
                android:paddingTop="11dp"
                android:paddingBottom="11dp"
                android:gravity="center_vertical" android:layout_below="@+id/linearVkGroup"
                android:background="@drawable/abc_item_background_holo_dark">
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="7dp" android:src="@drawable/icon_vk_recomended"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:textSize="20sp"
                    android:text="@string/Top_rated"
                    android:textColor="@color/almost_white"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:layout_gravity="center_vertical"
                android:id="@+id/linearVkFriends"
                android:paddingTop="11dp"
                android:paddingBottom="11dp"
                android:gravity="center_vertical" android:layout_below="@+id/linearVkAlbum"
                android:background="@drawable/abc_item_background_holo_dark">
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="7dp" android:src="@drawable/icon_vk_friends"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:textSize="20sp"
                    android:text="@string/Friends"
                    android:textColor="@color/almost_white"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:layout_gravity="center_vertical"
                android:id="@+id/linearVkGroup"
                android:paddingTop="11dp"
                android:paddingBottom="11dp"
                android:gravity="center_vertical" android:layout_below="@+id/linearVkFriends"
                android:background="@drawable/abc_item_background_holo_dark">
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="7dp" android:src="@drawable/icon_vk_group"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:textSize="20sp"
                    android:text="@string/Groups"
                    android:textColor="@color/almost_white"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:layout_gravity="center_vertical"
                android:id="@+id/linearVkSearch"
                android:paddingTop="11dp"
                android:paddingBottom="11dp"
                android:gravity="center_vertical" android:layout_below="@+id/linearVkTop"
                android:background="@drawable/abc_item_background_holo_dark">
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="7dp" android:src="@drawable/icon_vk_search"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:textSize="20sp"
                    android:text="@string/search"
                    android:textColor="@color/almost_white"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:layout_gravity="center_vertical"
                android:id="@+id/linearVkAlbum"
                android:paddingTop="11dp"
                android:paddingBottom="11dp"
                android:gravity="center_vertical" android:layout_below="@+id/linearVkAll"
                android:background="@drawable/abc_item_background_holo_dark">
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="7dp" android:src="@drawable/icon_vk_album"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:textSize="20sp"
                    android:text="@string/albums"
                    android:textColor="@color/almost_white"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="bottom"
                android:id="@+id/linearLoading"
                android:visibility="invisible"
                android:layout_alignParentBottom="false"
                android:layout_centerInParent="true">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/loading_music"
                    android:id="@+id/textView1"
                    android:layout_gravity="center_horizontal|bottom"/>
            <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/progressBar"
                    android:layout_gravity="center_horizontal"/>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>


