<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:id="@+id/linearItemPlaylist">
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView" android:src="@drawable/icon_playlist" android:paddingLeft="4dp"
            android:paddingRight="3dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textItem" android:textSize="19sp" android:layout_gravity="center_vertical"
            android:paddingLeft="5dp" android:layout_weight="1"
            android:linksClickable="false" android:clickable="false"
            android:textColor="@color/filesystem_white" android:singleLine="true"/>
</LinearLayout>
