<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" android:paddingLeft="2dp" android:gravity="center_vertical">
    <TextView
            android:id="@+id/textControlTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="marquee" android:textSize="17sp" android:textColor="@color/blue_text"
            android:textStyle="normal" android:text=""/>
    <TextView
            android:id="@+id/textControlArtist"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="marquee" android:textSize="14sp" android:text=""/>

</LinearLayout>